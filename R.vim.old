" Arquivo de configurações específicas para R

" Funções 
	function MandaR(texto)
	  echo system("tmux send-keys -t tmux-R:1.1 '" . substitute(a:texto, "'", "'\\\\''", 'g') . "'")
	endfunction

" Mapeamentos
	nnoremap <localleader>p :silent ! alacritty -e $HOME/.config/nvim/abre_tmux-R &<CR>
	vnoremap <localleader>r "ry :call MandaR(@r)<CR>
	nnoremap <localleader>rr V"ry:call MandaR(@r)<CR>j^
	nnoremap <localleader>rR V"ry:call MandaR(@r)<CR>
	nnoremap <localleader>rp vip"ry:call MandaR(@r)<CR>}^
	nnoremap <localleader>rP vip"ry:call MandaR(@r)<CR>

	vnoremap <localleader>a, : Tabularize /,
	vnoremap <localleader>a= : Tabularize /=

	nnoremap <localleader>ls echo system("tmux send-keys -t tmux-R:1.1 'sapply(mget(ls()), class)'")
